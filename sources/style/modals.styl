
.modals
    display none
    position fixed
    top 0
    align-items center
    justify-content center
    color #ffffff
    opacity 0
    transition opacity 0.3s

    &.is-displayed
        display flex

    &.is-visible
        opacity 1

    .modal
        display none

        &.is-displayed
            display block

    *::selection
        color #251f2b
        background-color #ffffff

    .container
        display flex
        width 1000px

        @media only screen and (orientation portrait)
            flex-direction column
            width 500px

        @media only screen and (max-width 520px)
            width 400px

        @media only screen and (max-width 420px)
            width 320px

    .preview
        display flex
        align-items center
        justify-content center
        width 50%
        position relative
        padding-bottom 10%

        @media only screen and (orientation portrait)
            width auto
            min-height 250px

        .message
            position relative
            background #251f2b
            padding 0 4px 4px 4px

            .text
                font-size 2.5rem
                white-space nowrap
                color #ffffff
                border none
                outline none

            .flag
                position absolute
                bottom calc(100% - 12px)
                right -16px
                width 54px
                height 36px
                background red
                background-size cover
                image-rendering pixelated
                transform rotate(15deg)
                display none

                &.is-visible
                    display block

        .background
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            object-fit cover

    .content
        position relative
        width 50%
        padding 25px 40px 40px 40px
        background radial-gradient(ellipse at top left, #251f2b, #1d1721)

        @media only screen and (orientation portrait)
            width auto

        @media only screen and (max-width 520px)
            padding 20px 30px 30px 30px

        @media only screen and (max-width 420px)
            padding 15px 20px 20px 20px

        .close
            display flex
            justify-content center
            align-items center
            position absolute
            top 38px
            right 38px
            width 40px
            height 40px
            opacity 0.65

            @media only screen and (max-width 1024px), only screen and (orientation portrait)
                display none

            &:hover
                opacity 1
                
        .input-group
            display flex
            width 100%
            height 58px
            margin-top 1.5em

            > *
                border-top 1px solid #555555
                border-bottom 1px solid #555555

            >:first-child
                border-radius 8px 0 0 8px
                border-left 1px solid #555555

            &.is-valide
                button
                    cursor pointer
                    border-color #ffceca

                    svg
                        *
                            stroke #ffceca

            .input-text
                width calc(100% - 62px * 2)
                padding 0 15px 0 5px

            .submit
                padding 0 8px 0 4px
                border-radius 0 8px 8px 0
                border 1px solid #555555
                width 62px
                cursor default

                svg
                    *
                        stroke #555555

            .input-flag
                position relative
                width 62px
                font-size 16px

                .flag-button
                    position absolute
                    top 0
                    left 0
                    width 100%
                    height 100%
                    display flex
                    justify-content center
                    align-items center
                    cursor pointer

                    &.has-flag
                        .flag
                            display block

                        svg
                            display none

                    .flag
                        display none

                    &:hover
                        svg
                            *
                                fill #cccccc

                    svg
                        display block

                        *
                            fill #555555

                .flag-select
                    display none
                    position absolute
                    bottom 0
                    left 8px
                    width 200px
                    height 200px
                    background radial-gradient(ellipse at top left, #251f2b, #1d1721)
                    border-radius 8px 8px 0 0
                    border 1px solid #767676
                    border-bottom none
                    overflow hidden

                    &.is-visible
                        display block

                    .close-mini
                        position absolute
                        height 40px
                        width 34px
                        top 0
                        right 0
                        opacity 0.65

                        &:hover
                            opacity 1

                        img
                            position relative
                            top 4px
                            left -3px
                    

                    .remove
                        position absolute
                        height 40px
                        width 34px
                        top 0
                        right 30px
                        opacity 0.65

                        &:hover
                            opacity 1

                        img
                            position relative
                            top 3px
                    
                    .search
                        height 40px
                        width 100%
                        padding 4px 35px 0 10px

                    .no-result
                        display none
                        justify-content center
                        align-items center
                        position absolute
                        top 30px
                        bottom 0
                        left 0
                        right 0
                        opacity 0.65
                        pointer-events none

                        &.is-visible
                            display flex
                    
                    .choices
                        position absolute
                        top 40px
                        bottom 0
                        left 0
                        right 0
                    
                        .scroller
                            position absolute
                            top 0
                            left 0
                            width calc(100% + 20px)
                            height 100%
                            overflow-y scroll

                        .choice
                            display flex
                            padding 4px 8px
                            cursor pointer

                            &:hover
                                .label
                                    opacity 1

                            .label
                                opacity 0.65

                            .flag
                                margin-right 8px
        .text
            a
                color inherit
                text-decoration underline

        .text-button
            vertical-align top
            cursor pointer
            border-color #ffceca
            opacity 0.8
            padding 0 16px
            height 60px
            border-radius 8px
            border 1px solid #ffffff

            &:hover
                opacity 1

        .audio-toggle
            img
                &.audio-off
                    display block
                    
                &.audio-on
                    display none

            &.is-active
                img
                    &.audio-on
                        display block

                    &.audio-off
                        display none

        .mobile
            display none

            @media only screen and (max-width 1024px), only screen and (orientation portrait)
                display block

        .start
            display block
            
            @media only screen and (max-width 1024px), only screen and (orientation portrait)
                display none