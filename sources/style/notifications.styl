.notifications
    position absolute
    top 20px
    right 20px
    width @css{ min(350px, calc(100% - 40px)) }

    .items
        position absolute
        top 0
        left 0
        width 100%

    .notification
        position relative
        width 100%
        padding 12px 20px 15px 15px
        background radial-gradient(ellipse at top left, #251f2b, #1d1721)
        font-size 16px
        cursor pointer
        user-select none
        transform translateY(calc(-100% - 20px))
        transition transform 0.6s cubic-bezier(0.4, 1.6, 0.65, 1)

        &.is-visible
            transform translateY(0)

        &.is-leaving
            transform translateX(calc(100% + 20px))
            transition-timing-function cubic-bezier(0.42, 0, 0.47,-0.55)

        &:hover
            .bottom
                .open-icon
                    opacity 1

        .time-bar
            position absolute
            top 0
            left 0
            width 100%
            height 2px
            background #ffceca
            transform-origin 100% 0
            will-change transform

        .top
            display flex
            justify-content space-between
            align-items center
            margin-bottom 5px

            .title
                text-align left
                color #d5ff95
                font-size 32px
                margin-right 10px
                margin-bottom 0
                line-height 1em
                margin-bottom 0.25em

            .progress
                display flex
                align-items center
                font-weight 700
                color #d5ff95

                .check-icon
                    display block
                    width 17px
                    height 13px
                    margin-right 10px
                    background url(../ui/achievements/check.svg)

        .bottom
            display flex
            justify-content space-between
            align-items flex-start

            .description
                margin-right 10px
                margin-bottom 0
                color #ffffff
                line-height 1em
                font-size 16px
            
            .open-icon
                display block
                position relative
                top 1px
                width 19px
                height 19px
                background url('../ui/actions/actions-icon-open.webp')
                background-size 19px 19px
                opacity 0
                transition opacity 0.1s