
*
    box-sizing border-box
    margin 0
    padding 0
    -webkit-tap-highlight-color transparent

button
input
    background none
    color inherit
    border none
    padding 0
    font inherit
    outline inherit

button
    cursor pointer

html
body
.game
.modals
.menu
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    font-family "Nunito", sans-serif
    font-optical-sizing auto
    font-weight 400
    font-style normal
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    overflow hidden

.experience
    touch-action none

    .input-filter-wandering &,
    .input-filter-intro &
        cursor grab

        &:active
            cursor grabbing

html
    background radial-gradient(farthest-side at 0 0, #251f2b, #1d1721)
    font-size 20px
    touch-action manipulation // Prevents double tap zoom

    @media only screen and (max-width 520px)
        font-size 18px

    @media only screen and (max-width 420px)
        font-size 16px;

ul
ol
    padding-left 25px

.title
    margin-bottom 0.25em
    font-size 2.5rem
    font-family "Amatic SC", sans-serif
    font-weight 700
    font-style normal

.text
    margin-bottom 0.75em
    font-size 1rem

.text-small
    font-size 0.8rem

.text-danger
    color #ff87a2
    
    .icon
        vertical-align sub

.text-faded
    opacity 0.8

.text-align-right
    text-align right

.text-align-center
    text-align center


html:not(.is-server-offline) .offline-element
    display none !important

html:not(.is-server-online) .online-element
    display none !important